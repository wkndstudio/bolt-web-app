<div id="auth">
  <div class="container">
    <div class="row center-xs">
      <div class="col-xs-12">
        <div class="auth__content">
          <div class="logo">
            <img src="/assets/brand/logo--gradient.svg" alt="logo">
          </div>
          <h1>Welcome back</h1>
          <div class="omniauth">
            <a href=<%= user_google_oauth2_omniauth_authorize_path %> class="btn-auth--google">
              <img src="/assets/auth/google-auth.png" alt="">
              <span class="link-text">Sign In with Google</span>
            </a>
            <div class="divider">
             <p><span>or</span></p>
            </div>
          </div>
          <div class="auth__form">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                  <div class="form-group">
                <%= f.input :email,
                             label: false, 
                             placeholder: 'Your Email',
                             hint: false,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                             label: false, 
                             placeholder: 'Password',
                             hint: false,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                  </div>
                  <div class="form-group form-group--row">
                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                    <% end -%>
                  </div>
                
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in" %>
              </div>
            <% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "No account yet? Sign up", new_registration_path(resource_name) %><br />
<% end -%>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

